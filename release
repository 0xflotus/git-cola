#!/bin/sh
. $(dirname $0)/common.sh

do_docs=false
do_website=false
do_tarball=false
do_win32=false

# Options
prefix="$WEB_SOURCE"
win32_login=Administrator@localhost
win32_ssh_port=2002
win32_cola_dir=git-cola
win32_python=/c/Python27

usage() {
	echo "$(basename "$0") [options]"
	echo
	echo "options:"
	echo "--prefix <dir>            - specify the installation prefix"
	echo "--all                     - build tarball, win32, docs, and web"
	echo "--tarball                 - build the tarball"
	echo "--tarball-dir             - specify the tarball release directory"
	echo "--doc                     - build the documentation"
	echo "--win32                   - build the win32 installer"
	echo "--win32-login <user@host> - specify the win32 host"
	echo "--win32-port <port #>     - specify the win32 ssh port number"
	echo "--win32-dir <dir>         - specify win32 release dir"
	echo "--win32-cola-dir <dir>    - specify the win32 cola repo path"
	echo "--win32-python-dir <dir>  - specify the win32 python directory"
	exit 1
}

build_docs() {
	title Building docs
	do_or_die make prefix="$prefix" install-doc
}

build_tarball() {
	title Building tarball
	do_or_die make dist
	do_or_die make app-tarball
}

build_win32_remotely() {
	title Building win32 remotely

	do_or_die ssh -p $win32_ssh_port "$win32_login" '
		PATH=/c/Python27:$PATH
		cd '"$win32_cola_dir"'
		win32/create-installer.sh
	'
	do_or_die scp -P $win32_ssh_port \
		"$win32_login":"$win32_cola_dir"/"*.exe" .

	do_or_die ssh -p $win32_ssh_port \
		"$win32_login" "/bin/rm '$win32_cola_dir'/*.exe"
}

# Parse options
while test $# -gt 0; do
	case "$1" in
	--prefix)
		shift
		prefix="$1"
		shift
		;;
	--all)
		shift
		do_tarball=true
		do_win32=true
		do_docs=true
		;;
	--tarball)
		shift
		do_tarball=true
		;;
	--doc)
		shift
		do_docs=true
		;;
	--win32)
		shift
		do_win32=true
		;;
	--win32-login)
		shift
		win32_login="$1"
		shift
		;;
	--win32-cola-dir)
		shift
		win32_cola_dir="$1"
		shift
		;;
	--win32-python-dir)
		shift
		win32_python_dir="$1"
		shift
		;;
	--win32-port)
		shift
		win32_ssh_port="$1"
		shift
		;;
	--win32-dir)
		shift
		win32_dir="$1"
		shift
		;;
	--)
		shift
		break
		;;
	*)
		usage
		;;
	esac
done


if $do_tarball; then
	build_tarball
fi

if $do_win32; then
	build_win32_remotely
fi

if $do_docs; then
	build_docs
fi
